generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id                     String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName              String
  lastName               String
  email                  String    @unique
  password               String
  city                   String?
  street                 String?
  dateOfBirth            DateTime?
  gender                 String?
  profilePhoto           String?
  reset_token            String?   @unique
  reset_token_expiration DateTime?
}

model addCar {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String
  // user         User    @relation(fields: [userId], references: [id]) // ðŸ”¥ Foreign Key
  carName      String
  model        String
  mileage      Int
  engine       String
  transmission String
  price        Float
  description  String
  createdAt    DateTime @default(now()) // ðŸ”¥ Added timestamp
  updatedAt    DateTime @updatedAt // ðŸ”¥ Auto-updates on modify
}
