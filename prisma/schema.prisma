generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                     String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName              String
  lastName               String?
  email                  String    @unique
  password               String
  role                   Role      @default(USER)
  city                   String?
  street                 String?
  dateOfBirth            DateTime?
  gender                 String?
  profilePhoto           String?
  profilePublicId        String?
  reset_token            String?   @unique
  reset_token_expiration DateTime?
}

enum Role {
  ADMIN
  USER
}

model AddCar {
  id            String           @id @default(auto()) @map("_id") @db.ObjectId
  userID        String           @db.ObjectId
  carName       String
  model         String
  mileage       String
  engine        EngineType
  transmission  TransmissionType
  price         String
  carType       CarType
  description   String
  imageUrl      String?
  imagePublicId String?
  views         Int?             @default(0)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

enum EngineType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
}

enum TransmissionType {
  MANUAL
  AUTOMATIC
}

enum CarType {
  LUXURYCAR
  VINTAGECAR
  FAMILYCAR
  OFFROADCAR
}
